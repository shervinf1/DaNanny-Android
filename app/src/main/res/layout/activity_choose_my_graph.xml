<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseMyGraph"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <!-- Empty Space -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Summary"
            android:textAllCaps="false"
            android:textColor="#008ECC"
            android:textSize="24sp" />

        <android.support.v7.widget.CardView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="3"
            card_view:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/graph_background">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></com.github.mikephil.charting.charts.LineChart>

            </LinearLayout>


        </android.support.v7.widget.CardView>

<!--        <com.github.mikephil.charting.charts.PieChart-->
<!--            android:id="@+id/halfPie"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="2"></com.github.mikephil.charting.charts.PieChart>-->

            <android.support.v7.widget.CardView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                card_view:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="15dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:background="@drawable/green_button"
                        android:text="Generation"
                        android:layout_margin="5dp"></Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:background="@drawable/orange_button"
                        android:text="Consumption"
                        android:layout_margin="5dp"></Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blue_buttons"
                        android:text="Both"
                        android:textColor="#FFF"
                        android:layout_margin="5dp"></Button>

                </LinearLayout>

            </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>