<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseMyGraph">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical"
        android:background="@drawable/blue_buttons">

        <!-- Empty Space -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Summary"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />

<!--        <android.support.v7.widget.CardView-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            card_view:cardCornerRadius="0dp"-->
<!--            android:layout_marginLeft="0dp"-->
<!--            android:layout_marginRight="0dp"-->
<!--            android:layout_margin="0dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="0dp">

                <Button
                    android:id="@+id/generation_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3D3D3F"
                    android:fontFamily="sans-serif"
                    android:text="Generation"
                    android:textColor="#FFF"
                    android:textSize="12sp"></Button>

                <Button
                    android:id="@+id/consumption_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3D3D3F"
                    android:fontFamily="sans-serif"
                    android:text="Consumption"
                    android:textColor="#FFF"
                    android:textSize="12sp"></Button>

                <Button
                    android:id="@+id/both_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3D3D3F"
                    android:fontFamily="sans-serif"
                    android:text="Both"
                    android:textColor="#FFF"
                    android:textSize="12sp"></Button>

            </LinearLayout>

<!--        </android.support.v7.widget.CardView>-->

<!--        <android.support.v7.widget.CardView-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_weight="3"-->
<!--            card_view:cardCornerRadius="0dp"-->
<!--            android:layout_marginLeft="0dp"-->
<!--            android:layout_marginRight="0dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></com.github.mikephil.charting.charts.LineChart>

            </LinearLayout>


<!--        </android.support.v7.widget.CardView>-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            card_view:cardCornerRadius="15dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Data 1"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Value 1"
                        android:textSize="24sp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Data 2"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Value 2"
                        android:textSize="24sp"
                        android:textStyle="bold">

                    </TextView>



                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>